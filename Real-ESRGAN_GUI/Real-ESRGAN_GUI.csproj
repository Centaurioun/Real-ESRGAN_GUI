<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RootNamespace>Real_ESRGAN_GUI</RootNamespace>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NcnnDotNet" Version="0.0.0.20210723" />
    <PackageReference Include="NcnnDotNet.GPU" Version="0.0.0.20210723" />
    <PackageReference Include="Ookii.Dialogs.Wpf" Version="3.1.0" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="XCOPY &quot;$(SolutionDir)\Real-ESRGAN_GUI\models&quot; &quot;$(TargetDir)\models\&quot; /s /i /y" />
  </Target>

</Project>